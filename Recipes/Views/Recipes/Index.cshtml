﻿@using Recipes.Models.Recipes;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Recipes";
}

@model IEnumerable<RecipesViewModel>

@if (User.Identity?.IsAuthenticated ?? false)
{
    <h2>Recipes</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Ingredients</th>
                <th>Description</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var recipe in Model)
            {
                <tr>
                    <th>@recipe.Name</th>
                    <th>@recipe.Ingredients</th>
                    <th>@recipe.Description</th>
                    <th>
                        <button>
                            <a asp-controller="Recipes"
                               asp-action="Edit"
                               asp-route-id="@recipe.Id">
                                Edit
                            </a>
                        </button>
                        <button>
                            <a asp-controller="Recipes"
                               asp-action="Delete"
                               asp-route-id="@recipe.Id">
                                Delete
                            </a>
                        </button>
                    </th>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2 class="text-danger">You can't accesss this page if you aren't logged in.</h2>
}