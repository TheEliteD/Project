@{
    ViewData["Title"] = "Create Employee";
}

@if (User.Identity?.IsAuthenticated ?? false)
{
    <h2>Create Employee</h2>

    <form method="post" asp-controller="Employees" asp-action="Create">
        <p>
            <label>Name</label>
            <input type="text" name="Name" />
        </p>

        <p>
            <label>Email</label>
            <input type="text" step="any" name="Email" />
        </p>

        <p>
            <label>DateOfBirth</label>
            <input type="date" name="DateOfBirth" />
        </p>

        <p>
            <label>Salary</label>
            <input type="number" name="Salary" />
        </p>

        <p>
            <label>Department</label>
            <input type="text" step="any" name="Department" />
        </p>

        <button type="submit">Create</button>

        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Employees" asp-action="Index">View Employees</a>
        </li>
    </form>
}
else
{
    <h2 class="text-danger">You can't accesss this page if you aren't logged in.</h2>
}