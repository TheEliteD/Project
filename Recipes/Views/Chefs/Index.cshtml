@model IEnumerable<Recipes.Models.Chefs>

@{
    ViewData["Title"] = "Index";
}

<h1>Chefs</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ChefReviews)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TopChefs)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ChefReviews)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TopChefs)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
