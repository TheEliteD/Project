@using Recipes.Models.Chefs
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Chefs";
}

@model IEnumerable<ChefsViewModel>

@if (User.Identity?.IsAuthenticated ?? false)
{
    <h2>Chefs</h2>

    <table class="table">
        <thead>
            <tr>
                <th>ChefReviews</th>
                <th>TopChefs</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var chef in Model)
            {
                <tr>
                    <th>@chef.ChefReviews</th>
                    <th>@chef.TopChefs</th>
                    <th>
                        <button>
                            <a asp-controller="Chefs"
                               asp-action="Edit"
                               asp-route-id="@chef.Id">
                                Edit
                            </a>
                        </button>
                        <button>
                            <a asp-controller="Chefs"
                               asp-action="Delete"
                               asp-route-id="@chef.Id">
                                Delete
                            </a>
                        </button>
                    </th>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2 class="text-danger">You can't accesss this page if you aren't logged in.</h2>
}