@{
    ViewData["Title"] = "Chefs";
}

@if (User.Identity?.IsAuthenticated ?? false)
{
    <h2>Chefs</h2>

    <form method="post" asp-controller="Chefs" asp-action="Create">
        <p>
            <label>ChefReviews</label>
            <input type="text" step="any" name="ChefReviews" />
        </p>

        <p>
            <label>TopChefs</label>
            <input type="text" name="TopChefs" />
        </p>

        <button type="submit">Create</button>

        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Chefs" asp-action="Index">View Chefs</a>
        </li>
    </form>
}
else
{
    <h2 class="text-danger">You can't accesss this page if you aren't logged in.</h2>
}